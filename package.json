{
	"name": "scorekinole",
	"private": true,
	"version": "2.4.12",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"sync": "npx cap sync",
		"build:apk": "npm run build && npx cap sync android && cd android && .\\gradlew.bat app:assembleRelease && cd .. && node rename-apk.js",
		"release": "node scripts/create-release.js",
		"deploy": "npm run build && firebase deploy",
		"deploy:rules": "firebase deploy --only firestore:rules",
		"deploy:storage": "firebase deploy --only storage",
		"deploy:functions": "set FUNCTIONS_DISCOVERY_TIMEOUT=60 && firebase deploy --only functions --force",
		"deploy:hosting": "npm run build && firebase deploy --only hosting",
		"functions:log": "firebase functions:log",
		"machine-translate": "inlang machine translate --project project.inlang"
	},
	"devDependencies": {
		"@capacitor/assets": "^3.0.5",
		"@inlang/cli": "^3.0.0",
		"@inlang/paraglide-js": "^2.9.1",
		"@internationalized/date": "^3.11.0",
		"@lucide/svelte": "^0.561.0",
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.1.18",
		"clsx": "^2.1.1",
		"embla-carousel-svelte": "^8.6.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.3.0",
		"vite": "^6.0.0"
	},
	"dependencies": {
		"@capacitor-firebase/authentication": "^6.0.0",
		"@capacitor/android": "^6.0.0",
		"@capacitor/app": "^6.0.3",
		"@capacitor/browser": "^6.0.6",
		"@capacitor/cli": "^6.0.0",
		"@capacitor/core": "^6.0.0",
		"bits-ui": "^2.15.5",
		"firebase": "^10.13.0"
	}
}
