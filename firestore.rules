rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User profiles - users can only read/write their own profile
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Root-level matches collection - users can only read/write their own matches
    match /matches/{matchId} {
      // Read: only if the match belongs to the authenticated user
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;

      // Create: only if the match is being created with the user's own ID
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Update/Delete: only if the match belongs to the authenticated user
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Current match per user - users can only access their own
    match /currentMatch/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
