rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User avatars - only owner can write, anyone can read
    match /users/{userId}/avatar.jpg {
      // Anyone can read avatars (for rankings, tournament pages, etc.)
      allow read: if true;

      // Only the owner can upload/delete their avatar
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 2 * 1024 * 1024  // Max 2MB
                   && request.resource.contentType.matches('image/.*');

      // Owner can delete their avatar
      allow delete: if request.auth != null
                    && request.auth.uid == userId;
    }

    // Tournament photos (future use)
    match /tournaments/{tournamentId}/{allPaths=**} {
      // Anyone can read tournament photos
      allow read: if true;

      // Only authenticated users can write (will add admin check later)
      allow write: if request.auth != null
                   && request.resource.size < 2 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
